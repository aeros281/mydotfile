bindsym $mod+Shift+Down exec i3l move down
bindsym $mod+Shift+Up exec i3l move up
bindsym $mod+Shift+Right exec i3l move right

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+semicolon split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+s layout stacked

bindsym $alt+Shift+l mode "$change_layout"

set $change_layout Layout (v) vstack, (h) hstack, (a) hstack up (s) spiral
mode "$change_layout" {
        bindsym v exec i3l vstack 0.6, mode "default"
        bindsym h exec i3l hstack 0.4 up, mode "default"
        bindsym a exec i3l hstack 0.6 down, mode "default"
        bindsym s exec i3l spiral, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

